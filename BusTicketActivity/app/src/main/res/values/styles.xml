    <style name="card_item" parent="">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="cardCornerRadius">31dp</item>
        <item name="cardElevation">3dp</item>
    </style>
</resources>